{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./dist/server",
    "rootDir": "./", // Allow imports from shared and server
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"],
    "noImplicitAny": false // Suppress implicit any errors for now
  },
  "include": ["server", "shared"]
}
